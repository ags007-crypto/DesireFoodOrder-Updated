<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_total"
   >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:layout_width="300dp"
        android:textSize="40dp"
        android:background="#f55142"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:text="Breakfast - 0"

        android:id="@+id/bf_total"
        />
    <TextView
        android:background="#f55142"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:layout_width="300dp"
        android:layout_marginVertical="20dp"
        android:textSize="40dp"
        android:layout_height="wrap_content"
        android:text="Lunch - 0"
        android:id="@+id/l_total"
        android:layout_below="@+id/bf_total"
        />
    <TextView
        android:background="#f55142"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:layout_width="300dp"
        android:textSize="40dp"
        android:layout_height="wrap_content"
        android:text="Dinner - 0"
        android:id="@+id/d_total"
        android:layout_below="@+id/l_total"
        />

</LinearLayout>

</RelativeLayout>